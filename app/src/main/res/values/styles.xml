<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheetModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="RoundedBottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_modal</item>
    </style>

    <style name="AlerterDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Material3.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Material3.Button.TextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.Material3.Button.TextButton</item>
    </style>
</resources>